def melvin():
    name = "melvin"
    tries = 3
    name = input("Enter your password: ")

    if name == "melvin":
        return ' correct password \nhello melvin'

    while tries >= 1:
        tries = tries - 1
        print(f"Invalid password you have {tries} left \n")
        name = input("Enter your password: ")

        if name == "melvin":
            return 'correct password \nhello melvin'
        elif tries == 1:
            return ("invalid password ")

print(melvin())
